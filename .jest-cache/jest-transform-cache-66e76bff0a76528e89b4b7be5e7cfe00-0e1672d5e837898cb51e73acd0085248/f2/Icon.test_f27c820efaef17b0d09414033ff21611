'use strict';

import React from "react";
import { mount } from "enzyme";
import Icon from '../../../../web/src/js/components/Icon';

describe('Icon', () => {
  let props;
  let mountedIcon;

  const icon = () => {
    if (!mountedIcon) {
      mountedIcon = mount(
      React.createElement(Icon, props));

    }
    return mountedIcon;
  };

  beforeEach(() => {
    props = {
      name: undefined,
      size: undefined,
      spin: undefined };

    mountedIcon = undefined;
  });

  it('always renders italics', () => {
    const italics = icon().find("i");
    expect(italics.length).toBeGreaterThan(0);
  });
});